# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.{md,yml,yaml,json}]
indent_style = space
indent_size = 2

[*.{css,js}]
indent_style = tab
indent_size = 4

[composer.json]
indent_style = tab
indent_size = 4

[*.txt]
trim_trailing_whitespace = false
